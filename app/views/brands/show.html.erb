<%= render "components/navbar" %>
<div class="brandBanner">
  <div class="bannerText">
    <h1 class="brandHeader"><%= @brand.name %></h1>
    <p class="brandSlogan"><%= @brand.slogan %></p>
  </div>
</div>
<div class="brandContainer">
  <h2 class="favProductsHeader">Check out some of our favourites!</h2>
  <div class="favProductCards">
    <% @products.each do |product| %>
      <% cat = product.category %>
      <%= link_to brand_category_product_path(@brand, cat, product) do %>
        <%= render 'components/favProductCard', product: product %>
      <% end %>
    <% end %>
  </div>
  <div class="sideNav left">
    <%= link_to root_path do %>
      <div class="sideNavBtn">
        <h1 class="label M-Logo">M</h1>
      </div>
    <% end %>
  </div>
  <div class="sideNav right">
    <!-- shopping cart -->
    <%= link_to '#' do %>
      <div class="sideNavBtn">
        <img class="label icon-logo" src="<%= asset_url('bag.svg') %>" alt="">
      </div>
    <% end %>
    <!-- profile -->
    <%= link_to '#' do %>
      <div class="sideNavBtn last">
        <img class="label icon-logo" src="<%= asset_url('user.svg') %>" alt="">
      </div>
    <% end %>
  </div>
</div>

