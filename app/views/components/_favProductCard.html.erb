<% unless product.product_images.first.nil? %>
  <div class="favProductCard" style="background-image: linear-gradient(0deg, rgba(0,0,0,0.31), rgba(0,0,0,0.31)), url(<%= product.product_images.first.link %>)">
    <h1 class="productTitle"><%= product.name %></h1>
  </div>
<% else %>
  <div class="favProductCard noImage">
    <h1 class="productTitle"><%= product.name %></h1>
  </div>
<% end %>
