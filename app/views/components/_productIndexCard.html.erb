<div class="productIndexCard" id="product" data-category="<%= product.category.id %>">
  <% unless product.product_images.first.nil? %>
    <img src="<%= product.product_images.first.link %>" alt="" class="product-img">
  <% else %>
    <div class="noImage">
      <p>No Images</p>
    </div>
  <% end %>
  <hr>
  <div class="product-info">
    <p class="product-title"><%= product.name %></p>
    <p class="product-price"><%= product.price %> â‚¬</p>
  </div>
</div>
