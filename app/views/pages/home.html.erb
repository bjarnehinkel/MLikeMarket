<img src="<%= asset_url('bckgrnd-logos/shopping-bag.svg') %>" alt="" class="bckgrnd-logo bag">
<img src="<%= asset_url('bckgrnd-logos/lipstick.svg') %>" alt="" class="bckgrnd-logo lipstick">
<img src="<%= asset_url('bckgrnd-logos/dress.svg') %>" alt="" class="bckgrnd-logo dress">
<img src="<%= asset_url('bckgrnd-logos/hat.svg') %>" alt="" class="bckgrnd-logo hat">
<img src="<%= asset_url('bckgrnd-logos/high-heel.svg') %>" alt="" class="bckgrnd-logo stiletto">
<img src="<%= asset_url('bckgrnd-logos/bikini.svg') %>" alt="" class="bckgrnd-logo bikini">
<%= render 'components/banner' %>
<div class="container">
  <%= render 'components/introDiv' %>
</div>
<hr class="homeSeperator">
<div class="virtualBotiques">
  <div class="container">
    <h2><%= t('.boutiqueHeader') %></h2>
  </div>
  <!-- Darling of the Week Card to go here -->
  <% @favourite = Brand.where("status = 'fav'").first %>
  <%= link_to brand_path(@favourite) do %>
    <%= render 'components/darlingCard', favourite: @favourite %>
  <% end %>
  <div class="cardContainer">
    <div class="brandCards">
      <% Brand.all.where("status = 'normal'").each do |brand|  %>
        <%= link_to brand_path(brand) do %>
           <%= render('components/brandCard', brand: brand) %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'components/gallery' %>
<%= render 'components/generalFooter' %>
